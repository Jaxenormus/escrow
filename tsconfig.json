{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [".d.ts", "./node_modules/@types"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "sourceRoot": "./src",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "mikro-orm.config.js", "index.d.ts"]
}
