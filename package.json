{
  "name": "middleman-discord-bot",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsnd --rs --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "rimraf ./build && swc ./src -d build && resolve-tspaths && recursive-copy src/assets build/assets",
    "start": "prisma db push && node build/index.js",
    "lint": "eslint --ext .ts src --fix"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@logtail/node": "^0.4.12",
    "@noble/secp256k1": "^1.7.0",
    "@prisma/client": "latest",
    "@sapphire/framework": "^4.6.0",
    "@sapphire/pieces": "^3.7.0",
    "@sapphire/plugin-scheduled-tasks": "^8.0.0",
    "axios": "^1.5.1",
    "axios-retry": "^3.4.0",
    "dayjs": "^1.11.10",
    "discord.js": "14.x",
    "dotenv": "^16.0.3",
    "effect": "2.0.0-next.36",
    "lodash": "^4.17.21",
    "price-parser": "^3.4.0",
    "prisma": "^5.3.1",
    "satoshi-bitcoin": "^1.0.5",
    "uuid": "^9.0.1",
    "web3": "^4.1.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.89",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/lodash": "^4.14.189",
    "@types/node": "^20.7.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.3",
    "prettier-airbnb-config": "^1.0.0",
    "recursive-copy-cli": "^1.0.20",
    "resolve-tspaths": "^0.8.0",
    "rimraf": "^5.0.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.2.2"
